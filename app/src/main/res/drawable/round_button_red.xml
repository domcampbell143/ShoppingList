<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:color="@color/medium_red" android:width="3dp" />
            <solid android:color="@color/light_red"/>
            <size android:width="50dp" android:height="50dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:color="@color/medium_red" android:width="2dp" />
            <solid android:color="@color/dark_red"/>
            <size android:width="35dp" android:height="35dp"/>
        </shape>
    </item>
</selector>